@model List<(ABCRetailers.Data.CartRecord Item, ABCRetailers.Models.Product? Product)>

@{
    ViewData["Title"] = "My Cart";
}

<h2><i class="fas fa-shopping-cart"></i> My Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Your cart is empty.
        <a asp-controller="Product" asp-action="Index" class="alert-link">Go to products</a>.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th style="width:160px">Quantity</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    double total = 0;
                }
                @foreach (var pair in Model)
                {
                    var item = pair.Item;
                    var product = pair.Product;
                    var price = (product?.Price ?? 0);
                    var subtotal = price * item.Quantity;
                    total += subtotal;
                    <tr>
                        <td>
                            <strong>@(product?.ProductName ?? "Unknown")</strong><br />
                            <small class="text-muted">@product?.Description</small>
                        </td>
                        <td>
                            <form asp-action="Update" method="post" class="d-flex">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control me-2" style="width:90px" />
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </form>
                        </td>
                        <td>@price.ToString("C")</td>
                        <td>@subtotal.ToString("C")</td>
                        <td>
                            <form asp-action="Remove" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Continue Shopping
            </a>
        </div>

        <div class="text-end">
            <div class="mb-2"><strong>Total:</strong> <span class="h5">@total.ToString("C")</span></div>

            <form asp-action="Checkout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-check"></i> Checkout
                </button>
            </form>
        </div>
    </div>
}





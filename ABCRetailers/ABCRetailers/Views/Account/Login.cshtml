@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card" style="width: 420px; box-shadow: 0 6px 18px rgba(0,0,0,0.12);">
        <div class="card-header text-center" style="background:#222; color:white; border-radius: .25rem .25rem 0 0;">
            <h5 class="mb-0"><i class="fas fa-user-lock"></i> Login</h5>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input name="username" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Select Role</label>
                    <select name="selectedRole" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option value="Customer">Customer</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                </div>

                <div class="mt-3 text-center">
                    <small>Don't have an account? <a asp-action="Register">Register here</a>.</small>
                </div>
            </form>
        </div>

        <div class="card-footer text-center text-muted small">
            © 2025 - ABC Retailers - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


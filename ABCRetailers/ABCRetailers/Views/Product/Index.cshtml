@model IEnumerable<ABCRetailers.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box"></i> Products</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by product name..." value="@ViewData["CurrentSearch"]" />
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                    </td>

                    <td>
                        <code>
                            @(!string.IsNullOrEmpty(product.ProductId)
                            ? product.ProductId.Substring(0, Math.Min(8, product.ProductId.Length))
                            : string.Empty
                            )...
                    </code>
                </td>

                        <td>@product.ProductName</td>

                        <td>
                    @{
                                var desc = product.Description ?? string.Empty;
                                var shortDesc = desc.Length > 50 ? desc.Substring(0, 50) + "..." : desc;
                            }
                            @shortDesc
                        </td>

                        <td>
                            <strong class>@product.Price.ToString("C")</strong>
                            @if (product.Price <= 0)
                            {
                                <br />
                                <small class="text-danger"> Price not set</small>
                            }
                        </td>

                        <td>
                            <span class="badge bg-@(product.StockAvailable > 10 ? "success" : product.StockAvailable > 0 ? "warning" : "danger")">
                                @product.StockAvailable
                            </span>
                        </td>

                        <td>
                            <div class="btn-group" role="group">
                                @* Admin edit/delete buttons *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form method="post" asp-action="Delete" asp-route-id="@product.RowKey" onsubmit="return confirm('Delete this product?');" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                }

                                @* Customer: Add to cart *@
                                @if (User.IsInRole("Customer"))
                                {
                                    <form method="post" asp-action="AddToCart" asp-controller="Product" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@product.RowKey" />
                                        <input type="number" name="quantity" value="1" min="1" max="@product.StockAvailable" class="form-control d-inline" style="width:80px; display:inline-block; margin-right:6px;" />
                                        <button class="btn btn-sm btn-outline-primary" type="submit" title="Add to cart">
                                            <i class="fas fa-cart-plus"></i> Add
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found.
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="alert-link">Add your first product</a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index" class="alert-link">Back to home</a>
        }
    </div>
}








